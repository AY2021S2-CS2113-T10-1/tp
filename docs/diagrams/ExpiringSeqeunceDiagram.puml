@startuml
'https://plantuml.com/sequence-diagram

!include style.puml

participant ":ExpiringCommand" as ExpiringCommand
participant "fridge:Fridge" as Fridge
participant "food:Food" as Food

-> ExpiringCommand: execute()
activate ExpiringCommand

loop food in fridge
    ExpiringCommand-> Fridge: getFood()
    activate Fridge
    opt isExpiring
        Fridge -> Food: isExpiring()
        activate Food
        return
    end
    return food
end
destroy Food
destroy Fridge
<--ExpiringCommand: result
deactivate ExpiringCommand

@enduml